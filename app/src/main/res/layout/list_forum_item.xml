<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/list_selector"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/forum_img"
        android:src="@mipmap/ic_forum"
        android:layout_marginLeft="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forum_name"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:text="News Forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/forum_desc"
            android:textColor="#000000"
            android:alpha="0.56"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:text="The purpose of this forum is to discuss important notifications and so forth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>